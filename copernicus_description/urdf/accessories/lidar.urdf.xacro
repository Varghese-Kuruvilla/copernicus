<robot name="copernicus" xmlns:xacro="https://ros.org/wiki/xacro">
  <xacro:macro name="lidar" params="frame:=lidar topic:=scan sample_size:=720 update_rate:=50
                 min_angle:=-2.35619 max_angle:=2.35619 min_range:=0.5 max_range:=20.0 robot_namespace:=/">

      <joint name="lidar_mount_joint" type="fixed">
          <origin xyz="${lidar_mount_joint_x} ${lidar_mount_joint_y} ${lidar_mount_joint_z}" rpy="0 0 0" />
          <parent link="base_link" />
          <child link="lidar_mount" />
      </joint>

      <link name="lidar_mount" type="fixed">
          <visual>
              <origin xyz="0 0 0" rpy="0 0 0"/>
              <geometry>
                  <mesh filename="package://copernicus_description/meshes/lidar_mount.STL"/>
                  <material name="gray"/>
              </geometry>
          </visual>
          <collision>
              <origin xyz="0 0 0" rpy="0 0 0"/>
              <geometry>
                <mesh filename="package://copernicus_description/meshes/lidar_mount.STL"/>
              </geometry>
          </collision>
          <inertial>
              <origin xyz="0 0 0" rpy="0 0 0"/>
              <mass value="0.1"/>
              <inertia ixx="${lidar_mount_ixx}" ixy="${lidar_mount_ixy}" ixz="${lidar_mount_ixz}" iyy="${lidar_mount_iyy}" iyz="${lidar_mount_iyz}" izz="${lidar_mount_izz}" />
          </inertial>
      </link>

      <joint name="lidar_joint" type="fixed">
          <origin xyz="${lidar_joint_x} 0 0" rpy="${PI} 0 0" />
          <parent link="lidar_mount" />
          <child link="${frame}" />
      </joint>
      
      <link name="${frame}">
          <visual>
              <origin/>
              <geometry>
                  <mesh filename="package://copernicus_description/meshes/lms_151.STL"/>
              </geometry>
              <material name="gray"/>
          </visual>
          <collision>
              <origin xyz="0 0 0" rpy="0 0 0"/>
              <geometry>
                <mesh filename="package://copernicus_description/meshes/lms_151.STL"/>
              </geometry>
          </collision>
          <inertial>
              <origin xyz="0 0 0" rpy="0 0 0"/>
              <mass value="1.1"/>
              <inertia ixx="${0.0833333 * 1.1 * (0.102*0.102 + 0.152*0.152)}" ixy="0.0" ixz="0.0"
          iyy="${0.0833333 * 1.1 * (0.105*0.105 + 0.152*0.152)}" iyz="0.0"
          izz="${0.0833333 * 1.1 * (0.105*0.105 + 0.102*0.102)}" />
          </inertial>
      </link>


      <gazebo reference="${frame}">
        <sensor type="ray" name="${frame}">
          <pose>0 0 0 0 0 0</pose>
          <visualize>false</visualize>
          <update_rate>${update_rate}</update_rate>
          <ray>
            <scan>
              <horizontal>
                <samples>${sample_size}</samples>
                <resolution>1</resolution>
                <min_angle>${min_angle}</min_angle>
                <max_angle>${max_angle}</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>${min_range}</min>
              <max>${max_range}</max>
              <resolution>0.01</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.001</stddev>
            </noise>
          </ray>
          <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
            <topicName>${topic}</topicName>
            <frameName>${frame}</frameName>
            <robotNamespace>${robot_namespace}</robotNamespace>
          </plugin>
        </sensor>
      </gazebo>
  </xacro:macro>
</robot>
